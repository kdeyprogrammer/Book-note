
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Lora:wght@400;700&family=Montserrat:wght@500;700&family=Roboto:wght@400;500&display=swap" rel="stylesheet">

  </head>
<body id="book">
    <%- include("partials/header.ejs") %>
    
    
    <section class="controls d-flex py-5  sort-book">
      
      <form method="GET" action="/sort">
        <select name="sort" class="form-select" style="width: 300px;"  >
          <option value="">Sort by</option>
          <option value="rating">Rating</option>
          <option value="recent">Most Recent</option>
        </select>
        <button type="submit" class="btn btn-success mt-4 ">Sort</button>
      </form>
    </section>
      
    <div class="container my-5">

  <% book.forEach(b => { %>
    <div class="row align-items-start mb-5">

     
      <div class="col-md-2 col-4">
        <a href="https://www.amazon.com/s?k=<%=b.isbn %>&tag=sivers-20">
          <img
          src="https://covers.openlibrary.org/b/isbn/<%=b.isbn %>-M.jpg"
          alt="<%= b.title %>"
          class="img-fluid"
          
        >
        </a>
        
        
      </div>


      <div class="col-md-10 col-8">

        <h2 class="fw-normal text-uppercase text-decoration-underline">
          <%= b.title %> - by <%= b.author %>
        </h2>

        <p class="mt-4 Date-Read text-muted">
          Date read: <%= new Date(b.read_date).toLocaleDateString('en-GB')%>.
          How strongly I recommend it: <strong><%= b.rating %>/10</strong>
        </p>

      </div>
          <br>
          <br>

      
      <div class="mt-4 d-flex">
        <a href="/edit/<%= b.book_id %>" class="btn btn-primary me-2 "  style="padding: 10px; font-size: 1rem;">
          Edit
        </a>

        <form action="/delete/<%= b.book_id %>" method="POST"
              onsubmit="return confirm('Are you sure you want to delete this book?')"
            >
              <button type="submit" class="btn btn-danger btn-sm " style="padding: 10px; font-size: 1rem;">
                Delete
              </button>
            </form>

      </div>

      

           <p class="fs-5 lh-lg" style="white-space: pre-line">
            <%= b.description %>
            </p>
        <p class="mt-4">
          <a href="javascript:void(0)"
           onclick="toggleNote('<%= b.book_id %>')">
          Read my notes
          </a>
             or go to the
          <a href="https://www.amazon.com/s?k=<%=b.isbn %>&tag=sivers-20" class="link-primary fw-semibold">
               Amazon page
          </a>  for details and reviews.
        </p>
        <!-- NOTE (hidden) -->
        <div id="note-<%= b.book_id %>"   style="display:none;">
           <h3 class="">MY NOTES</h3>
          
         <p id="textNote"> <%= b.note %></p>
        </div>
    </div>
  <% }) %>

</div>

    <%- include("partials/footer.ejs") %>
    
     <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
     <script>
  function toggleNote(id) {
      const el = document.getElementById("note-" + id);
      el.style.display = el.style.display === "none" ? "block" : "none";
    }
</script>
</body>
</html>













